{% extends 'auth_base.html.twig' %}

{% block title %}Kora Invest Admin - Register{% endblock %}

{% block body %}
    <section class="vh-100 bg-dark-subtle">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="{{ asset("pictures/assets/auth.jpg") }}"
                                     alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form action="{{ path('security.register') }}" method="post">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-3x me-3" style="color: #DB4437;"></i>
                                            <span class="h1 fw-bold mb-0">Kora Invest Admin</span>
                                        </div>
                                        <h4 class="fw-normal mb-3" style="letter-spacing: 1px;">Active your account</h4>
                                        {% if error !=""%}
                                            <div class="alert alert-dismissible alert-danger">
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                                <strong>Error : </strong>{{ error}}
                                            </div>
                                        {% endif %}
                                        <div class="form-outline mb-2">
                                            <input type="tel" name="code" id="code" class="form-control form-control-lg" placeholder="- - - - - -" required="" maxlength="6" minlength="6"/>
                                            <label class="form-label" for="code">Activation code</label>
                                        </div>
                                        <div class="form-outline mb-2">
                                            <input type="text" name="username" id="username" class="form-control form-control-lg" placeholder="Username" required=""/>
                                            <label class="form-label" for="username">Username</label>
                                        </div>
                                        <div class="form-outline mb-2">
                                            <input type="password" id="password" class="form-control form-control-lg" name="password" placeholder="********"  required=""/>
                                            <label class="form-label" for="password">Password</label>
                                        </div>
                                        <div class="form-outline mb-2">
                                            <input type="password" id="confPassword" class="form-control form-control-lg" name="confPassword" placeholder="********" />
                                            <label class="form-label" for="confPassword">Confirm your password</label>
                                        </div>
                                        <div class="pt-1 mb-2">
                                            <button class="btn btn-lg btn-block text-white" style="background-color: #DB4437" type="submit">Register</button>
                                        </div>
                                        <p class="mb-5 pb-lg-2 text-dark">already have an Account? <a href="{{ path('security.login') }}"
                                                                                                                  style="color:  #DB4437;">Login here</a></p>
                                        <a href="#" class="small text-muted">Terms of use.</a>
                                        <a href="#" class="small text-muted">Privacy policy</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
