                <th scope="col" class="col-1">Active</th>
                <th scope="col" class="col-1">Return Access</th>
            </tr>
            </thead>
            <tbody>
            {% for removedAdmin in removedAdmins %}
                <tr class="text-center fw-semibold">
                    <td>{{ removedAdmin.firstName }}&nbsp;{{ removedAdmin.lastName }}</td>
                    <td><img class="rounded-0" src="{{ removedAdmin.picture }}" alt="{{ removedAdmin.firstName }}" width="50"
