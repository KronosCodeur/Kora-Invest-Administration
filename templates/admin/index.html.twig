                <th scope="col" class="col-2">Identifier</th>
                <th scope="col" class="col-1">Gender</th>
                <th scope="col" class="col-1">Birthday</th>
                <th scope="col"class="col-1">Phone</th>
                <th scope="col" class="col-2">Address</th>
                <th scope="col" class="col-1">Active</th>
                <th scope="col" class="col-1">Downgrade Access</th>
            </tr>
            </thead>
            <tbody>
            {% for superAdmin in superAdmins %}
                <tr class="text-center fw-semibold">
                    <td>{{ superAdmin.firstName }}&nbsp;{{ superAdmin.lastName }}</td>
                    <td><img class="rounded-0" src="{{ superAdmin.picture }}" alt="{{ superAdmin.firstName }}" width="50"
                             height="50"></td>
                    <td>{{ superAdmin.username }}</td>
                    <td>{{ superAdmin.gender }}</td>
                    <td>{{ superAdmin.birthday }}</td>
                    <td>{{ superAdmin.phone }}</td>
