                    <td>{% if removedAdmin.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                class="fas fa-circle text-danger"></i>{% endif %}</td>
                    <td><a href="{{ path('admin.returnAdmin', {'id': removedAdmin.id}) }}" class="text-decoration-none" style="color: #0f9d58 "><i class="fa fa-arrow-circle-up"></i> </a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
