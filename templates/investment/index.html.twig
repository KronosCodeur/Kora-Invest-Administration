{% extends 'base.html.twig' %}

{% block title %}investments{% endblock %}

{% block body %}
    <div class="w-auto h-auto overflow-scroll m-4">
        <p class="fw-semibold fs-4 ">Client Investments</p>
        <div class="table-responsive-md">
            <table border="2px" class="table table-striped table-sm border-1 border-dark rounded-3">
                <thead>
                <tr class="text-center text-capitalize">
                    <th scope="col">Number</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Type</th>
                    <th scope="col">Balance (KORA)</th>
                    <th scope="col">Return (Bol)</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Available At</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for invest in investments %}
                    <tr class="text-center fw-semibold">
                        <td>{{ invest.number }}</td>
                        <td>{{ invest.owner }}</td>
                        <td>{{ invest.type.name }}</td>
                        <td>{{ invest.solde }}</td>
                        <td>{{ invest.return }}</td>
                        <td>{{ invest.makedAt }}</td>
                        <td>{{ invest.availableAt }}</td>
                        <td>{% if invest.blocked==false %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                    class="fas fa-circle text-danger"></i>{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
