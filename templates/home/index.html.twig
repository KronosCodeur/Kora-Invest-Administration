{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block style %}
    <style>
        .cardOne{
            width: 20rem;
            background-color: #DB4437;
            transition-duration: 0.5s;
        }
        .cardOne:hover{
            box-shadow: 10px 20px 20px rgb(219, 68, 55,0.6) !important;
        }
        .cardTwo{
            width: 20rem;
            background-color: #4285f4;
            transition-duration: 0.5s;
        }
        .cardTwo:hover{
            box-shadow: 10px 20px 20px rgba(66, 133, 244, 0.6) !important;
        }
        .cardThree{
            width: 20rem;
            background-color: #0f9d58;
            transition-duration: 0.5s;
        }
        .cardThree:hover{
            box-shadow: 10px 20px 20px rgba(15, 157, 88, 0.6) !important;
        }
        .cardFour{
            width: 20rem;
            background-color: #f4b400;
            transition-duration: 0.5s;
        }
        .cardFour:hover{
            box-shadow: 10px 20px 20px rgba(244, 180, 0, 0.6) !important;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="w-100 h-auto p-1 d-flex flex-row flex-wrap justify-content-around align-items-start">
        <div class="card text-white  mb-3 text-center shadow cardOne" >
            <div class="card-header">
                <h3><strong>Daily Clients</strong></h3>
            </div>
            <div class="card-body">
                <h2 class="card-title"><i class="fas fa-users"></i> </h2>
                <h2 class="card-text">{{ clients}} Clients</h2>
            </div>
        </div>
        <div class="card text-white  mb-3 text-center shadow cardTwo" >
            <div class="card-header">
                <h3><strong>Daily Contributions</strong></h3>
            </div>
            <div class="card-body">
                <h2 class="card-title"><i class="fas fa-hand-holding-dollar"></i> </h2>
                <h2 class="card-text">{{ contributions | length }} &nbsp;<span class="fs-3">Contributions</span> </h2>
            </div>
        </div>
        <div class="card text-white  mb-3 text-center shadow cardThree" >
            <div class="card-header">
                <h3><strong>Daily  Incomes</strong></h3>
            </div>
            <div class="card-body">
                <h2 class="card-title"><i class="fas fa-dollar-sign"></i> </h2>
                <h2 class="card-text">{{ dailyIncomes  }} F CFA</h2>
            </div>
        </div>
        <div class="card text-white  mb-3 text-center shadow cardFour" >
            <div class="card-header">
                <h3><strong>Actives Investments</strong></h3>
            </div>
            <div class="card-body">
                <h2 class="card-title"><i class="fas fa-hand-back-fist"></i> </h2>
                <h2 class="card-text">{{ investments | length }} Investments</h2>
            </div>
        </div>
    </div>
    <div class="table-responsive small overflow-x-scroll">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">FullName</th>
                <th scope="col">Profile</th>
                <th scope="col">Gender</th>
                <th scope="col">Birthday</th>
                <th scope="col">Phone</th>
                <th scope="col">address</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.firstName }}&nbsp;{{ user.lastName }}</td>
                <td><img class="rounded-0" src="{{ user.picture }}" alt="{{ user.userIdentifier }}" width="50" height="50"></td>
                <td>{{ user.gender }}</td>
                <td>{{ user.birthday }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.address }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
