{% extends 'base.html.twig' %}

{% block title %}Accounts{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap-reverse flex-row justify-content-between px-3 py-2">
        <p class="fw-semibold fs-4 "> Accounts List</p>
        <a href="{{ path('account.createAccount') }}" class="py-2 px-3 text-white fw-semibold text-decoration-none rounded-pill shadow" style="background-color: #0f9d58"><i class="fas fa-wallet"></i> New Account</a>
    </div>
    <div class="w-100 h-100 overflow-scroll mb-3">
        <div class="table-responsive-md">
            <table border="2px" class="table table-striped table-sm border-1 border-dark rounded-3">
                <thead>
                <tr class="text-center text-capitalize">
                    <th scope="col">Number</th>
                    <th scope="col">Type</th>
                    <th scope="col">Balance</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for account in accounts %}
                    <tr class="text-center fw-semibold">
                        <td>{{ account.number }}</td>
                        <td>{{ account.type.name }}</td>
                        <td>{{ account.solde }}</td>
                        <td>{{ account.owner.firstName }} {{ account.owner.lastName }}</td>
                        <td>{{ account.createdAt}}</td>
                        <td>{% if account.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                    class="fas fa-circle text-danger"></i>{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
