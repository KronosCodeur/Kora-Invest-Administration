{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-row flex-wrap justify-content-start align-items-start w-100 h-100 gap-5">
        <div class="d-flex flex-column col-2 justify-content-start h-100 bg-dark-subtle p-4">
            <img src="{{ client.picture }}" alt=""  class="rounded-2"  style="width: 95%">
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">FullName: <span class="fw-bold" >{{ client.firstName }} {{ client.lastName }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Identifier: <span class="fw-bold" >{{ client.userIdentifier }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Phone: <span class="fw-bold" >{{ client.phone }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Gender: <span class="fw-bold" >{{ client.gender }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Birthday: <span class="fw-bold" >{{ client.birthday }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Location: <span class="fw-bold" >{{ client.city. name}},  {{ client.country.name }}</span></p>
            <p class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Address: <span class="fw-bold" >{{ client.address }}</span></p>
        </div>
        <div class="col-8">
            <div class="w-100 h-25">
                <p>Client accounts List</p>
                <div class="table-responsive-md">
                    <table class="table table-striped table-sm border-1 border-dark rounded-2">
                        <thead>
                        <tr class="text-center text-capitalize">
                            <th scope="col">Number</th>
                            <th scope="col">FullName</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Country</th>
                            <th scope="col">City</th>
                            <th scope="col">address</th>
                            <th scope="col">active</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for account in client.accounts %}
                            <tr class="text-center fw-semibold">
                                <td>{{ account.number }}</td>
                                <td>{{ account.solde }}</td>
                                <td>{% if client.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                            class="fas fa-circle text-danger"></i>{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}