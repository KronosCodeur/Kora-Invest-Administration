{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-row flex-wrap justify-content-start align-items-start w-100 h-100 gap-5">
        <div class="d-flex flex-column col-3 justify-content-start h-100 bg-dark-subtle p-5 rounded-3 shadow">
            <img src="{{ client.picture }}" alt=""  class="rounded-2"  style="max-width: 95%; height: auto">
            <ul class="nav">
            <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">FullName: <span class="fw-bold" >{{ client.firstName }} {{ client.lastName }}</span></li>
            <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Identifier: <span class="fw-bold text-lowercase" >{{ client.userIdentifier }}</span></li>
            <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Phone: <span class="fw-bold" >{{ client.phone }}</span></li>
            <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Gender: <span class="fw-bold" >{{ client.gender }}</span></li>
            <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Birthday: <span class="fw-bold" >{{ client.birthday }}</span></li>
                <li class="text-black text-capitalize text-start fs-5 my-2 fw-normal">Location: <span class="fw-bold" >{{ client.address }}, {{ client.city. name}} - {{ client.country.name }}</span></li>
            </ul>
            <a class="border-2 col-6 mt-4  shadow py-1 px-3 text-black rounded-2 text-decoration-none w25 text-center fw-semibold fs-5" style="border:  #DB4437 2px solid " href="{{ path('client.index') }}"><i class="fa fa-arrow-left"></i>&nbsp;Back</a>
        </div>
        <div class="col-8">
            <div class="w-100 h-25 overflow-scroll mb-3">
                <p class="fw-semibold fs-4 ">Client accounts List</p>
                <div class="table-responsive-md">
                    <table border="2px" class="table table-striped table-sm border-1 border-dark rounded-3">
                        <thead>
                        <tr class="text-center text-capitalize">
                            <th scope="col">Number</th>
                            <th scope="col">Type</th>
                            <th scope="col">Balance ( {{ client.country.currency }} )</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for account in client.accounts %}
                            <tr class="text-center fw-semibold">
                                <td>{{ account.number }}</td>
                                <td>{{ account.type.name }}</td>
                                <td>{{ account.solde }}</td>
                                <td>{{ account.createdAt}}</td>
                                <td>{% if client.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                            class="fas fa-circle text-danger"></i>{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="w-100 h-25 overflow-scroll mb-3">
                <p class="fw-semibold fs-4 ">Client Investments List</p>
                <div class="table-responsive-md">
                    <table border="2px" class="table table-striped table-sm border-1 border-dark rounded-3">
                        <thead>
                        <tr class="text-center text-capitalize">
                            <th scope="col">Number</th>
                            <th scope="col">Type</th>
                            <th scope="col">Balance ( {{ client.country.currency }} )</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for account in client.accounts %}
                            <tr class="text-center fw-semibold">
                                <td>{{ account.number }}</td>
                                <td>{{ account.type.name }}</td>
                                <td>{{ account.solde }}</td>
                                <td>{{ account.createdAt}}</td>
                                <td>{% if client.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                            class="fas fa-circle text-danger"></i>{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}