{% extends 'base.html.twig' %}
{% block title %}Clients{% endblock %}
{% block style %}
{% endblock %}
{% block body %}
    <div class="d-flex flex-wrap flex-row justify-content-between px-3 py-2">
        <h2>Customers Lists</h2>
        <a href="{{ path('client.addClient') }}" class="py-2 px-3 bg-success text-white fw-semibold text-decoration-none rounded-pill shadow"><i class="fas fa-user-plus"></i> New Client</a>
    </div>
    <div class="table-responsive-md">
        <table class="table table-striped table-sm border-1 border-dark rounded-2">
            <thead>
            <tr class="text-center text-capitalize">
                <th scope="col">Profile</th>
                <th scope="col">FullName</th>
                <th scope="col">Gender</th>
                <th scope="col">Birthday</th>
                <th scope="col">Phone</th>
                <th scope="col">Country</th>
                <th scope="col">City</th>
                <th scope="col">address</th>
                <th scope="col">Registered At</th>
                <th scope="col">active</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr class="text-center fw-semibold">
                    <td><a class="text-black fw-semibold" href="{{ path('client.details', {'id': client.id}) }}">{{ client.firstName }}&nbsp;{{ client.lastName }}</a></td>
                    <td><img class="rounded-circle" src="{{ client.picture }}" alt="{{ client.firstName }}" width="50"
                             height="50"></td>
                    <td>{{ client.gender }}</td>
                    <td>{{ client.birthday }}</td>
                    <td>{{ client.phone }}</td>
                    <td>{{ client.country.name }}</td>
                    <td>{{ client.city.name }}</td>
                    <td>{{ client.address }}</td>
                    <td>{{ client.registeredAt }}</td>
                    <td>{% if client.active %} <i class="fas fa-circle text-success"></i>{% else %}<i
                                class="fas fa-circle text-danger"></i>{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
